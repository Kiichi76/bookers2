<h2>Editing Book</h2>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %> 

    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body %>

    <%= f.submit "Update Book" %>

<% end %>

