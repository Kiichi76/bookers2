<h2>User info</h2>
<%= image_tag current_user.id.get_profile_image(100, 100) %>

<h2>New book</h2>
<%= form_with model: @book, url: books_path, method: :post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body %>

    <%= f.submit "Create Book" %>
<% end %>


<h2>Books</h2>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <th><%= book.title %></th>
                <th><%= book.body %></th>
            </tr>
        <% end %>
    </tbody>
</table>
