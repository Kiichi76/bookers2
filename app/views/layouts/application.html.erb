<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/b2070cb52d.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="navbar bg-dark border-bottom border-bottom-dark" data-bs-theme="dark">
        <div class="container">
          <div class="navbar-brand">
            <%= link_to "Bookers", root_path %>
          </div>      
            <% if user_signed_in? %>
              <ul class="navbar-nav">
                <li>
                  <%= link_to user_path(current_user.id) do %>
                    <i class="fa-solid fa-house"></i> Home
                  <% end %>
                </li>
                <li>
                  <%= link_to users_path do %>
                     <i class="fa-solid fa-users"></i> Users
                  <% end %>
                </li>
                <li>
                  <%= link_to books_path do %>
                    <i class="fa-solid fa-book-open"></i> Books
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa-solid fa-right-from-bracket"></i> Log out
                  <% end %>
                </li>
              </ul>
            <% else %>
              <ul class="navbar-nav">
                <li>
                  <%= link_to root_path do %>
                    <i class="fa-solid fa-house"></i> Home
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path do %>
                    <i class="fa-solid fa-link"></i> About
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_registration_path do %>
                    <i class="fa-solid fa-user-plus"></i> Sign up
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path do %>
                    <i class="fa-solid fa-right-to-bracket"></i> Log in
                  <% end %>
                </li>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </header>
    <div>
      <%= flash[:notice] %>
    </div>
    <%= yield %>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
