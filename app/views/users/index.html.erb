<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h2>User info</h2>
            <%= image_tag current_user.get_profile_image(100, 100) %>
            <table>
                <tr>
                    <th>name</th>
                    <th><%= current_user.name %></th>
                    </tr>
                <tr>   
                    <th>introduction</th>
                    <th><%= current_user.introduction %></th>
                </tr>
            </table>
            <%= link_to edit_user_path(current_user.id) do %>
                <i class="fa-solid fa-user-gear"></i>
            <% end %>

            <h2>New book</h2>
            <%= form_with model: @book, url: books_path, method: :post do |f| %>
                <%= f.label :title %>
                <%= f.text_field :title %>

                <%= f.label :body, "Opinion" %>
                <%= f.text_area :body %>

                <%= f.submit "Create Book" %>
            <% end %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>User</h2>

            <table>
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @user.each do |users| %>
                        <tr>
                            <th><%= image_tag users.get_profile_image(80, 80) %></th>
                            <th><%= users.name %></th>
                            <th><%= link_to "Show", user_path(users.id) %></th>
                        </tr>
                    <% end %>
                </tbody>
            
            </table>
        </div>
    </div>
</div>